<h1><%= @movie.title %></h1>

<%= form_with url: "/users/#{@user.id}/movies/#{@movie.db_id}/viewing-party/create", method: :post, local: true do |form| %>
  <%= form.label "Duration: " %>
  <%= form.number_field :duration, value: @movie.runtime, min: @movie.runtime %><br>
  <%= form.label "Select Date: " %>
  <%= form.date_field :select_date, value: Date.today %><br>
  <%= form.label "Start Time: " %>
  <%= form.time_field :start_time %><br>

  <% @users.each do |user| %>
    <%= form.label "#{user.name}" %>
    <%= form.check_box "#{user.name}" %><br>
  <% end %>

  <%= form.submit "Create Party" %>
<% end %>
